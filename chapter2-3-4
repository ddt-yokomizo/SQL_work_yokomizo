workbook=#

SELECT
	cp.c_id AS 前のページ,
	cn.c_id AS 現在のページ
FROM
	contents AS 
OUTER JOIN
	contents AS cn
ON
	cp.next_id <> cn.c_id
ORDER BY
	cn.c_id ASC
;

1.	結合句がOUTERとなっているが、正しくはINNER
2.	結合キーのオペレータが<>となっているが、正しくは=

【正しいSQL】

SELECT						--取得する
	cp.c_id AS 前のページ,	--コンテンツコード列を別名「前のページ」として指定
	cn.c_id AS 現在のページ	--コンテンツコード列を別名「現在のページ」として指定
FROM					--どこから
	contents AS cp		--書籍目次テーブル(contents)から　別名：cp
INNER JOIN			--内部結合
	contents AS cn	--書籍目次テーブル(contents)から　別名：cn
ON					--結合キー
	cp.next_id = cn.c_id	--(cp)の次コンテンツコードと(cn)のコンテンツコード
ORDER BY			--ソート
	cn.c_id ASC		--(cn)のコンテンツコードを昇順
;

