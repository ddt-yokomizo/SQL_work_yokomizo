SELECT			--取得する
	(l_name || f_name) AS 社員名,	--氏名を結合し別名「社員名」として指定
	CASE				--条件分岐
		WHEN class IN ('部長','課長') THEN '管理職'	--部長、課長は管理職
		WHEN class IN ('主任','担当') THEN '総合職'	--主任、担当は総合職
		ELSE '一般職'								--その他は一般職
	END AS 役職クラス								--条件分岐終了
FROM
	employee
;


SELECT				--取得する
	depart_id,		--部署ID列を指定 
	COUNT(*)		--レコード数を集計
FROM				--どこから
	employee		--社員テーブル(employee)から
WHERE				--条件指定
	sex = 2			--女性社員のみ
GROUP BY			--グルーピング
	depart_id		--部署ID列でグルーピング
HAVING				--グルーピング結果に対して条件指定
	COUNT(*) >= 3	--レコード数の集計が3件以上
;

